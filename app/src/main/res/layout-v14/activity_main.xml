<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scribie.recorder.audiorecorder.MainActivity"
    android:background="@drawable/home_background">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pause_imageButton"
        android:src="@android:drawable/ic_media_play"
        android:layout_above="@+id/playpause"
        android:layout_alignLeft="@+id/recordstop"
        android:layout_alignStart="@+id/recordstop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_btn_speak_now"
        style="@style/Base.Animation.AppCompat.Dialog"
        android:background="#f90707"
        android:baseline="@dimen/abc_action_bar_default_padding_end_material"
        android:clickable="true"
        android:cropToPadding="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/recordstop"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/pause"
        android:id="@+id/playpause"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/recordstop"
        android:layout_below="@+id/playpause"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
