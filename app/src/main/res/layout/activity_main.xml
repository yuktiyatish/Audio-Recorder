<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scribie.recorder.audiorecorder.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribie Audio Recorder"
        android:textColor="#faffffff"
        android:textIsSelectable="false"
        android:focusableInTouchMode="false"
        android:background="#ffffff"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Recording"
        android:id="@+id/record_button"
        android:focusable="true"
        android:background="#cb2727"
        android:elegantTextHeight="true"
        style="@style/AppTheme"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:maxHeight="@dimen/abc_action_button_min_height_material"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/play_button"
        android:layout_toEndOf="@+id/play_button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/record_button"
        android:src="@drawable/record"
        android:layout_alignTop="@+id/record_button"
        android:layout_toRightOf="@+id/stop_button"
        android:layout_toEndOf="@+id/stop_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
